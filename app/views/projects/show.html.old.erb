<div class="container">

<p id="notice"><%= notice %></p>

<p>
  <h2> <%= @project.title %> </h2>

</p>

<p>
   <% if @project.image.exists? %>
        <%= link_to (image_tag @project.image.url(:medium), class: 'img-responsive img-medium') %>
    <% end %>
</p>

<p>
  <%= simple_format(@project.description) %>
</p>

<p>
  <%= link_to 'More Information about the Project', @project.webpage %>
</p>

<h2>Add an improvement:</h2>
<%= form_for([@project, @project.improvement.build]) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :principle %><br />
    <%= f.text_field :principle %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
	
<h2>Improvements</h2>
<% @project.improvements.each do |improvement| %>
  <p>
    <b>Title:</b>
    <%= improvement.title %>
  </p>

  <p>
    <b>Author:</b>
    <%= improvement.author %>
  </p> 

  <p>
    <b>Principle:</b>
    <%= improvement.principle %>
  </p>

  <p>
    <b>Description:</b>
    <%= improvement.description %>
  </p>

<% end %>


<% if user_signed_in? %>
    <%= link_to 'Edit Project', edit_project_path(@project) %>
<% end %>

<%= link_to 'Back', projects_path %>

</div>